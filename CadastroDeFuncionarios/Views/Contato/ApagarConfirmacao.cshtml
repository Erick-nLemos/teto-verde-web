@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o cadastro";
}
<div class="text-center">
    <input type="hidden" asp-for="Id" />
    <h3>Realmente deseja apagar o contato (@Model.Name)?</h3>
    <br />
    <a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
    <a class="btn btn-success" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>
</div>
