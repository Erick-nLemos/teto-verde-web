@model ContatoModel

@{
    ViewData["Title"] = "Criar Cadastro";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Visitantes e Funcionários</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <br />
    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br/>
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br/>
    <div class="form-group">
        <label for="CPF/CNPJ">CPF/CNPJ</label>
        <input type="text" asp-for="CpfCnpj" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.CpfCnpj)
    </div>
    <br />
    <button type="submit" class="btn btn-success btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>