@model ContatoModel


@{
    ViewData["Title"] = "Editar Cadastos";
}

<div class="text-center">

    <h1 class="display-4">Editar Cadastros</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">


    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do Funcionário">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <br />
    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do Funcionário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do Funcionário">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />
    <div class="form-group">
        <label for="CPF/CNPJ">CPF/CNPJ</label>
        <input type="text" asp-for="CpfCnpj" class="form-control" placeholder="Digite o cpf/cnpj do Funcionário">
        @Html.ValidationMessageFor(x => x.CpfCnpj)
    </div>
    <br />

    <button type="submit" class="btn btn-success btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>