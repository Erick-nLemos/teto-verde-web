@using CadastroDeFuncionarios.Enunns
@model UsuarioModel

@{
    ViewData["Title"] = "Criar Usuário";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Usuários</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br />
    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br/>
    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <br/>

    <div class="form-group">
        <label for="Perfil">Perfil</label>
      
        <select class="form-control" asp-for="Perfil">
            <option value="">Selecionar</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>

        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <br />
    <div class="form-group">
        <label for="Login">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <br />
    <button type="submit" class="btn btn-success btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>